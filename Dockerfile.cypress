# Dockerfile for Cypress E2E Testing
FROM cypress/included:latest

WORKDIR /app

# Copy package files
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

# Copy Cypress configuration and tests
COPY cypress.config.ts ./
COPY cypress/ ./cypress/
COPY src/ ./src/

# Set default command
CMD ["npx", "cypress", "run"]
