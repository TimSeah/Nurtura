{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "services/**/*.js",
    "routes/**/*.js",
    "templates/**/*.js",
    "!**/node_modules/**"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testPathIgnorePatterns": ["/node_modules/"],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "verbose": true,
  "testTimeout": 30000
}
