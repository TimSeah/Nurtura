# MongoDB Configuration (MongoDB Atlas)
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=5000

# Frontend Environment Variables
# API Base URL - should point to your backend server
VITE_API_URL=http://localhost:5000/api

# Gmail Configuration for Email Reminders
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Email Service Configuration
EMAIL_FROM_NAME=Nurtura Care Management Service
EMAIL_FROM_ADDRESS=your-email@gmail.com

# Auto-Moderation Configuration
ENABLE_MODERATION=true
PYTHON_PATH=python
MODEL=irlab-udc/MetaHateBERT
HATE_THRESHOLD=0.7

# Optional: Rate limiting and service configuration
EMAIL_RATE_LIMIT=100
CRON_SCHEDULE=*/5 * * * *
