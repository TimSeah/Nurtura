# Auto-Moderation Configuration Template
# Copy this file to .env and adjust values for your environment

# Model Configuration
# Available models: irlab-udc/MetaHateBERT, unitary/toxic-bert
MODEL=irlab-udc/MetaHateBERT

# Confidence threshold for blocking content (0.0-1.0)
# 0.5 = Very sensitive (blocks more content)
# 0.7 = Balanced (recommended for most cases)  
# 0.9 = Very permissive (blocks only obvious hate speech)
HATE_THRESHOLD=0.7

# Enable/disable the entire moderation system
ENABLE_MODERATION=true

# Persistent Service Configuration
MODERATION_SERVICE_PORT=8001
MODERATION_IDLE_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=moderation.log

# Performance Configuration
MAX_TEXT_LENGTH=2048
REQUEST_TIMEOUT=10

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
